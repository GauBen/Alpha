{
  "name": "alpha",
  "version": "1.0.0",
  "description": "Plaquette alpha n7",
  "main": "index.js",
  "repository": "https://github.com/GauBen/Alpha.git",
  "author": "GauBen <benaim.gautier@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all --parallel watch:*",
    "watch:eleventy": "eleventy --serve --output=_pre-dist",
    "watch:static": "copy-and-watch --watch ./{assets,static}/** _pre-dist",
    "watch:parcel": "parcel '_pre-dist/**/*.html' --out-dir _dist --cache-dir _cache --no-source-maps",
    "clean": "rimraf ./_dist ./_pre-dist",
    "build": "yarn build:eleventy && yarn build:static && yarn build:parcel",
    "build-bde": "yarn build:eleventy-bde && yarn build:static && yarn build:parcel-bde",
    "build:eleventy": "eleventy --output=_pre-dist",
    "build:eleventy-bde": "eleventy --output=_pre-dist --pathprefix /~benaimg/alpha/",
    "build:static": "copy-and-watch './{assets,static}/**' _pre-dist",
    "build:parcel": "parcel build '_pre-dist/**/*.html' --out-dir _dist --cache-dir _cache --no-source-maps",
    "build:parcel-bde": "parcel build '_pre-dist/**/*.html' --out-dir _dist --cache-dir _cache --no-source-maps --public-url /~benaimg/alpha/"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-navigation": "^0.1.6",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "copy-and-watch": "^0.1.4",
    "eslint": "^7.4.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "stylelint": "^13.5.0",
    "stylelint-8-point-grid": "^0.2.6",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-plugin-stylus": "^0.9.0",
    "stylelint-rscss": "^0.4.0",
    "stylus": "^0.54.7",
    "typescript": "^3.9.3"
  }
}
