*
*::before
*::after
  box-sizing inherit

html
  box-sizing border-box
  font-size 50%

body
  margin 0
  overflow-x hidden
  color $color
  font-size 2rem
  font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
  background-color $background-color
  --x -1
  --y 0
  --scroll 0

img
  vertical-align bottom

h1
  margin $gap-large 0

h2
h3
h4
h5
h6
p
  margin $gap-normal 0
