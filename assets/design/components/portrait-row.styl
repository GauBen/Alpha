.portrait-row
  display inline-block
  white-space nowrap

  @media (prefers-reduced-motion no-preference)
    animation portrait-row $timing-contemplative infinite linear

    &.-on-scroll
      animation portrait-row 1s linear paused
      animation-delay calc(0.05 * -1s * var(--parallax))

    &.-reversed
      animation-name portrait-row-reversed

  > .portrait
    width auto
    min-width (100vw / ($number-of-portraits - 1))
    height auto
    max-height 25vh

@keyframes portrait-row
  to
    transform translateX((-100% / 3))

@keyframes portrait-row-reversed
  from
    transform translateX((-100% / 3))
