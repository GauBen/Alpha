/* stylelint-disable no-descending-specificity */
.main-content
  overflow hidden

.main-content
.main-content > .club
  background-color inherit

  > h1
  > h2
  > h3
  > p
  > ul
    margin-right auto
    margin-left auto

  > h1
  > h2
  > h3
    font-weight 300
    line-height 1.25
    text-align center
    text-transform uppercase

  > h1
  > h2
  > h3
  > p
    padding 0 $gap-small

  > ul
    padding 0 $gap-small 0 2 * $gap-normal
    list-style-type disc

  > h1
    width max-content
    max-width 100%
    padding-top 1em
    padding-bottom 1em
    font-size 4em
    word-break break-word
    hyphens auto
    background-color inherit // Fix for Chrome

  > p
  > ul
    max-width $width-text
    text-align justify

  > h2
  > h3
  > p.-wide
    max-width $width-wide

  > h2
    margin-top 1em
    font-size 3em

  > h3
    margin-top 1em
    font-size 2em

  > p.-wide
    padding 0

  > p.-center
  > div.-center
    text-align center

  > div.-padded
    padding $gap-normal

  > p > a
    beautiful-link($dark-link, $dark-background-color)
