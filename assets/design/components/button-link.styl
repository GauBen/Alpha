.button-link
  display inline-block
  padding $gap-normal 2 * $gap-normal
  color $dark-background-color
  font-weight bold
  white-space nowrap
  text-decoration inherit
  background-image linear-gradient(100deg, mix($purple, $dark-color, 75%) 50%, mix($purple, $dark-color) 50.1%)
  background-position right center
  background-size 250% 100%
  border-radius $radius

  @media (prefers-reduced-motion no-preference)
    transition background-position $timing-normal

  &:hover
  &:focus
    background-position left center
