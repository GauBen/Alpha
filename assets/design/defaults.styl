*
*::before
*::after
  box-sizing inherit

html
  box-sizing border-box
  font-size clamp(50%, 1vmin, 100%)

body
  overflow-x hidden
  color $color
  font-size 2rem
  font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
  line-height 1.5
  background-color $background-color
  --x -1
  --y 0
  --parallax 0

  &.-dark
    color $dark-color
    background-color $dark-background-color

img
svg
  max-width 100%
  height auto
  vertical-align bottom

h1
  margin $gap-large 0

h2
h3
h4
h5
h6
p
  margin $gap-normal 0
